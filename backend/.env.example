# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server
NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection
# Get this from MongoDB Atlas Dashboard
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/portfolio

# JWT Configuration
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_strong_secret_here_change_this
JWT_EXPIRES_IN=7d

# CORS Origins (your frontend URLs)
# Update these after deploying frontend/admin
FRONTEND_URL=https://amirlearner.me
ADMIN_URL=https://admin.amirlearner.me

# Your Railway Backend URL (for reference)
# RAILWAY_URL=https://amirsteamgithubio-production.up.railway.app

